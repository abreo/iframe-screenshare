{
  "name": "iframe-screenshare",
  "version": "1.0.0",
  "description": "Utility for an application to enable screen sharing in an iframed window",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "node_modules/.bin/semistandard",
    "build": "node_modules/.bin/browserify -s screenShare src/index.js -o out/iframe-screenshare.js -t [ babelify --presets [ es2015 ] ]",
    "prepublish": "npm run build && npm run _test",
    "_test": "node_modules/.bin/mocha --compilers js:babel-core/register test/test.js",
    "test-server": "npm run _test -- -w",
    "test": "npm run lint && npm run _test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mypurecloud/iframe-screenshare.git"
  },
  "keywords": [
    "screenshare",
    "screen",
    "share",
    "iframe"
  ],
  "author": "Xander Dumaine <xander.dumaine@inin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mypurecloud/iframe-screenshare/issues"
  },
  "pre-push": [
    "test"
  ],
  "pre-commit": [
    "lint"
  ],
  "homepage": "https://github.com/mypurecloud/iframe-screenshare#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "semistandard": "^9.0.0",
    "sinon": "^1.17.6",
    "uglify-js": "^2.7.3"
  },
  "semistandard": {
    "ignore": [
      "**/out/",
      "/lib/select2/",
      "/lib/ckeditor/",
      "tmp.js"
    ]
  }
}
